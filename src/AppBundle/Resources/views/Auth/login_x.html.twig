{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    {% if error %}
        <div class="error">{{ error.message|trans({},'messages') }}</div>
    {% endif %}
	
	<div id="formContainer">
		
		
		 <form action="{{ path("_auth_login_check") }}" method="post" id="login">
            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="E-mail"/><br />
            <input type="password" id="password" name="_password" placeholder="Password"/><br />
			<button type="submit" class="btn btn-default">
						<i class="pe-7s-right-arrow"></i>
			</button>
    </form>
	</div>
    <br>
    <br>
            <ul id="menu">
                <li><a href="{{ path('_account_register') }}">{% trans %}Registration{% endtrans %}</a></li>
                
                {% if error %}
                <li><a href="{{ path('_account_forgot_passwd') }}">{% trans %}Forgot password ?{% endtrans %}</a></li>
                {% endif %}
            </ul>
        
{% endblock %}



