<!DOCTYPE html>
<html>
    <head>
        <meta charset="{{ _charset }}" />
        <meta name="robots" content="noindex,nofollow" />
        <title>SUPLA CLOUD</title>
		{% if app.user %}
			<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
		{% else %}
			<link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
			<link href="{{ asset('assets/css/supla-login.css') }}" rel="stylesheet" />
		{% endif %}
		
		<link href="{{ asset('assets/css/fonts.css') }}" rel="stylesheet" />
        <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" />
		<link href="{{ asset('assets/css/supla.css') }}" rel="stylesheet" />

        <script src="{{ asset('assets/js/jquery-2.1.4.min.js') }}"></script>
		<script>
			window.jQuery || document.write('<script src="{{ asset('assets/js/jquery-2.1.4.min.js') }}"><\/script>')
		</script>
        <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('assets/js/jquery.turn-off-tv.js') }}"></script>
        <script src="{{ asset('assets/js/pnotify.custom.min.js') }}"></script>
        {% if app.user %}
			{% if app.request.get('_route') == '_loc_list' or app.request.get('_route') == '_aid_list' or app.request.get('_route') == '_iodev_item' %}
				<script src="{{ asset('assets/js/owl.carousel.min.js') }}"></script>
				<script src="{{ asset('assets/js/jquery.liveFilter.js') }}"></script>
				<script src="{{ asset('assets/js/pGenerator.jquery.js') }}"></script>
				<script src="{{ asset('assets/js/jquery.tooltipster.min.js') }}"></script>
			{% endif %}
			{% if app.request.get('_route') == '_iodev_list' %}
				<script src="{{ asset('assets/js/isotope.pkgd.min.js') }}"></script>
				<script src="{{ asset('assets/js/iodev.js') }}"></script>
			{% endif %}
		{% else %}
			<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>
			<script type="text/javascript" src="{{ asset('assets/js/jquery.fullPage.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modernizr.custom.js') }}"></script>
			<script type="text/javascript">
				$(document).ready(function() {
					$('#fullpage').fullpage({
						anchors: ['firstPage', 'secondPage', '3rdPage', '4thpage', 'lastPage'],
						menu: '#menu',
						scrollingSpeed: 1000
					});
					$.fn.fullpage.setMouseWheelScrolling(false);
   					$.fn.fullpage.setAllowScrolling(false);
				});
			</script>
        {% endif %}
        <script src="{{ asset('assets/js/supla.js') }}"></script>
	
        
    </head>
    <body {% if app.request.get('_route') == '_auth_login' %} class="login" {% endif %} {% if app.request.get('_route') == '_iodev_item' %} class="device-details" {% endif %}
	{% if homepage_viewed is defined and homepage_viewed == false %} class="first-time" {% endif %}>
	
	<div id="hello">
		<div class="row">
			<div class="col-xs-12"><h1>Hi</h1></div>
		</div>
	</div>
    
    {% include 'AppBundle:Dialogs:flashmsgs.html.twig' %}
    
    {% block content_header %}
    
        {% if app.user %}
		
		<div class="navbar-holder">
		<nav class="navbar navbar-default animated">
        	<div class="container">
				<ul class="nav navbar-nav navbar-center">
				  <li class="pull-left"><a href="http://supla.org" target="_blank"><img src={{ asset('assets/img/logo.svg') }}> supla</a></li>
				  <li {% if app.request.get('_route') == '_homepage' %} class="active" {% endif %}><a class="nav-link" href="{{ path('_homepage') }}"><i class="pe-7s-rocket"></i><br /> {% trans %}Start Here{% endtrans %}</a></li>
				  <li {% if app.request.get('_route') == '_iodev_list' or app.request.get('_route') == '_iodev_item' or app.request.get('_route') == '_iodev_channel_item_edit' %} class="active" {% endif %}><a class="nav-link" href="{{ path('_iodev_list') }}"><i class="pe-7s-plug"></i><br /> {% trans %}I/O Devices{% endtrans %}</a></li>
				  <li {% if app.request.get('_route') == '_loc_list' %} class="active" {% endif %}><a class="nav-link" href="{{ path('_loc_list') }}"><i class="pe-7s-home"></i><br /> {% trans %}Locations{% endtrans %}</a></li>
				  <li {% if app.request.get('_route') == '_aid_list' %} class="active" {% endif %}><a class="nav-link" href="{{ path('_aid_list') }}"><i class="pe-7s-key"></i><br /> {% trans %}Access Identifiers{% endtrans %}</a></li>
				  <li class="dropdown pull-right">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.security.token.user.email }} <span class="caret"></span></a>
						<ul class="dropdown-menu">
					  		<li><a class="nav-link" href="{{ path('_account_view') }}">{% trans %}Account{% endtrans %}</a></li>
							<li class="divider"></li>
							<li class="dropdown-header">Languages</li>
							<li><a href="#">English</a></li>
							<li><a href="#">Deutsch</a></li>
							<li><a href="#">Polski</a></li>
							<li class="divider"></li>
							<li><a id="black" href="{{ path('_auth_logout') }}">{% trans %}Sign Out{% endtrans %}</a></li>
						</ul>
				  	</li>
				</ul>
           </div>
      </nav>
	  </div>
        {% endif %}
    {% endblock %}
	
	<div id="block">
        {% block content %}{% endblock %}
 	</div>
	
    </body>
	<script>
	$(document).ready(function() {
		$('.nav-link').click(function(){
			  var href= $(this).attr('href');
			  $('#block').fadeOut( 300, function(){
					window.location=href;
			  })
			  return false;
		});
	});
	</script>
</html>
